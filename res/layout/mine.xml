<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/history" />

    <LinearLayout
        android:id="@+id/scroll_list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical" >

            <LinearLayout
                android:id="@+id/history_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/history_form1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/calander1"
                        android:layout_width="74dp"
                        android:layout_height="83dp"
                        android:src="@drawable/calander" />

                    <RelativeLayout
                        android:id="@+id/history1"
                        android:layout_width="400dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/content_bg" >

                        <TextView
                            android:id="@+id/dish_pic1"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@drawable/dish" />

                        <TextView
                            android:id="@+id/dish_rate1_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignLeft="@+id/dish_pic1"
                            android:layout_below="@+id/dish_pic1"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/dish_rate1_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/dish_pic1"
                            android:layout_toRightOf="@+id/dish_rate1_1"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/dish_rate1_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/dish_pic1"
                            android:layout_toRightOf="@+id/dish_rate1_2"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/dish_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="18dp"
                            android:layout_toRightOf="@+id/dish_rate1_3"
                            android:text="Dish name (TODO)"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dish_info1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/dish_name1"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/dish_name1"
                            android:layout_marginTop="20dp"
                            android:text="Description  xxxxxxxxxxxxxxxx (TODO)"
                            android:textStyle="italic" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/history_form2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/calander2"
                        android:layout_width="74dp"
                        android:layout_height="83dp"
                        android:src="@drawable/calander" />

                    <RelativeLayout
                        android:id="@+id/history2"
                        android:layout_width="400dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/content_bg" >

                        <TextView
                            android:id="@+id/dish_pic2"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@drawable/dish" />

                        <TextView
                            android:id="@+id/dish_rate2_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignLeft="@+id/dish_pic2"
                            android:layout_below="@+id/dish_pic2"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/dish_rate2_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/dish_pic2"
                            android:layout_toRightOf="@+id/dish_rate2_1"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/dish_rate2_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/dish_pic2"
                            android:layout_toRightOf="@+id/dish_rate2_2"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/dish_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="18dp"
                            android:layout_toRightOf="@+id/dish_rate2_3"
                            android:text="Dish name (TODO)"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dish_info2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/dish_name2"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/dish_name2"
                            android:layout_marginTop="20dp"
                            android:text="Description  xxxxxxxxxxxxxxxx (TODO)"
                            android:textStyle="italic" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/favorite_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/favorite" />

    <LinearLayout
        android:id="@+id/scroll_list2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/ScrollView02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/favorite_pic"
            android:scrollbars="vertical" >

            <LinearLayout
                android:id="@+id/favorite_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/favorite1"
                    android:layout_width="400dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/content_bg" >

                    <TextView
                        android:id="@+id/favorite_dish_pic1"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:background="@drawable/dish" />

                    <TextView
                        android:id="@+id/favorite_dish_rate1_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/favorite_dish_pic1"
                        android:layout_below="@+id/favorite_dish_pic1"
                        android:background="@drawable/rate" />

                    <TextView
                        android:id="@+id/favorite_dish_rate1_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/favorite_dish_pic1"
                        android:layout_toRightOf="@+id/favorite_dish_rate1_1"
                        android:background="@drawable/rate" />

                    <TextView
                        android:id="@+id/favorite_dish_rate1_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/favorite_dish_pic1"
                        android:layout_toRightOf="@+id/favorite_dish_rate1_2"
                        android:background="@drawable/rate" />

                    <TextView
                        android:id="@+id/favorite_dish_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/favorite_dish_rate1_3"
                        android:text="Dish name (TODO)"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/favorite_dish_info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/favorite_dish_name1"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/favorite_dish_name1"
                        android:layout_marginTop="20dp"
                        android:text="Description  xxxxxxxxxxxxxxxx (TODO)"
                        android:textStyle="italic" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/favorite_form2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/favorite2"
                        android:layout_width="400dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/content_bg" >

                        <TextView
                            android:id="@+id/favorite_dish_pic2"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@drawable/dish" />

                        <TextView
                            android:id="@+id/favorite_dish_rate2_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignLeft="@+id/favorite_dish_pic2"
                            android:layout_below="@+id/favorite_dish_pic2"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/favorite_dish_rate2_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/favorite_dish_pic2"
                            android:layout_toRightOf="@+id/favorite_dish_rate2_1"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/favorite_dish_rate2_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/favorite_dish_pic2"
                            android:layout_toRightOf="@+id/favorite_dish_rate2_2"
                            android:background="@drawable/rate" />

                        <TextView
                            android:id="@+id/favorite_dish_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="18dp"
                            android:layout_toRightOf="@+id/favorite_dish_rate2_3"
                            android:text="Dish name (TODO)"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/favorite_dish_info2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/favorite_dish_name2"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/favorite_dish_name2"
                            android:layout_marginTop="20dp"
                            android:text="Description  xxxxxxxxxxxxxxxx (TODO)"
                            android:textStyle="italic" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>