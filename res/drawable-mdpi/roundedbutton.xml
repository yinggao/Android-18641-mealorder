<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#A6D7CE" />

            <stroke android:width="1dp" android:color="#999999" />

            <corners android:bottomLeftRadius="30dip" android:bottomRightRadius="30dip" android:topLeftRadius="30dip" android:topRightRadius="30dip" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#6FC4B3" android:startColor="#A6D7CE" />

            <stroke android:width="1dp" android:color="#999999" />

            <corners android:bottomLeftRadius="30dip" android:bottomRightRadius="30dip" android:topLeftRadius="30dip" android:topRightRadius="30dip" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>

</selector>